{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
 {% if 'ROLE_ADMIN' in app.user.roles %}
<h1>Liste Des Categories</h1>
 <a class="btn btn-primary" href="{{url('admin_categories_create')}}" role="button">Ajouter une nouvelle categorie </a><br/>
<table class="table">
    <thead>
        <tr>
            <th>Libellé</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for cat in categorie %}
            <tr>
                <td>{{ cat.libelle }}</td>
                <td>
                    <a href="#" class="btn btn-success">Voir Plus</a>
                    <a href="{{url('admin_categories_delete',{'id':cat.id})}}" class="btn btn-danger">Supprimer</a>
                    <a href="{{ path('admin_categories_update', {'id': cat.id}) }}" class="btn btn-info">Editer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

 {% else %}
<h1>Liste Des Categories</h1>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Libellé</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for cat in categorie %}
            <tr>
                <td>{{ cat.libelle }}</td>
                <td>
                    <a href="#" class="btn btn-success">Voir détails</a>
              
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}

{% endblock %}
